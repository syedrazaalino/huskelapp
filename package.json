{
  "name": "task-reminder-desktop",
  "version": "1.0.0",
  "description": "Huskelapp - Desktop oppgavep√•minnelse som alltid er synlig som en notatbok",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "task",
    "reminder",
    "desktop",
    "notes"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "auto-launch": "^5.0.5"
  },
  "build": {
    "appId": "com.taskreminder.desktop",
    "productName": "Huskelapp",
    "win": {
      "target": "nsis",
      "sign": null,
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [],
      "signDlls": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
